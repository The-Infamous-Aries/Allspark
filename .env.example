# AllSpark Discord Bot Environment Variables Template
# Copy this file to .env and fill in your actual values
# NEVER commit the actual .env file to version control!

# =============================================================================
# REQUIRED: Discord Bot Configuration
# =============================================================================

# Your Discord bot token (get from https://discord.com/developers/applications)
DISCORD_TOKEN=your_bot_token_here

# Command prefix for text commands (default: !)
COMMAND_PREFIX=! 

# =============================================================================
# OPTIONAL: AI API Keys (set if using AI features)
# =============================================================================

# Gemini API key for AI-powered features (optional)
GEMINI_API_KEY=your_gemini_api_key_here

# Groq API key for AI-powered features (optional)
GROQ_API_KEY=your_groq_api_key_here

# =============================================================================
# OPTIONAL: Politics and War API (set if using PnW features)
# =============================================================================

# Politics and War API key (get from https://politicsandwar.com/account/api/)
PANDW_API_KEY=your_pnw_api_key_here

# Politics and War bot key (optional, for advanced features)
PANDW_BOT_KEY=your_pnw_bot_key_here

# Default alliance ID for recruitment features (optional)
CYBERTRON_ALLIANCE_ID=9999

# =============================================================================
# OPTIONAL: Admin User IDs (set user IDs for bot administrators)
# =============================================================================

# Primary admin user ID (optional - will use first available if not set)
ADMIN_USER_ID=0

# Individual admin user IDs (set to 0 to disable)
GRUMP_USER_ID=0
ARIES_USER_ID=0
PRIMAL_USER_ID=0
CARNAGE_USER_ID=0
BENEVOLENT_USER_ID=0
TECH_USER_ID=0

# =============================================================================
# OPTIONAL: Default Channel and Role Configuration
# =============================================================================

# Default results channel ID (optional)
RESULTS_CHANNEL_ID=0

# Default role IDs (comma-separated, set to 0 to disable)
ROLE_AUTOBOT=0
ROLE_MAVERICK=0
ROLE_DECEPTICON=0
ROLE_CYBERTRONIAN_CITIZEN=0
ROLE_PREDAKING=0

# Military roles for PnW features
IA_ROLE_ID=0
MG_ROLE_ID=0
HG_ROLE_ID=0

# Default channel IDs (optional)
CYBERCOIN_MARKET_CHANNEL_ID=0
GENERAL_CHANNEL_ID=0
BOT_COMMANDS_CHANNEL_ID=0

# =============================================================================
# ADVANCED: Server-Specific Configuration
# =============================================================================
# Format: SERVER_<GUILD_ID>_<SETTING_NAME>=value
# Example: SERVER_123456789_RESULTS_CHANNEL_ID=987654321
# Example: SERVER_123456789_ROLE_AUTOBOT=111111111,222222222
# Example: SERVER_123456789_CYBERCOIN_MARKET_CHANNEL_ID=555555555

# =============================================================================
# EXAMPLE: Server-Specific Settings
# =============================================================================
# Replace YOUR_GUILD_ID with your actual Discord server ID
# SERVER_YOUR_GUILD_ID_RESULTS_CHANNEL_ID=your_results_channel_id
# SERVER_YOUR_GUILD_ID_ROLE_AUTOBOT=your_autobot_role_id
# SERVER_YOUR_GUILD_ID_ROLE_MAVERICK=your_maverick_role_id
# SERVER_YOUR_GUILD_ID_CYBERCOIN_MARKET_CHANNEL_ID=your_market_channel_id